<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="md_title_color">@color/darkText</item>
        <item name="md_positive_color">@color/colorPrimary</item>
        <item name="md_negative_color">@color/colorPrimary</item>
        <item name="md_content_color">@color/colorPrimary</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="MaterialSearchView">
        <item name="searchBackground">@color/md_white</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:hint">@string/search_hint</item>
        <item name="android:editTextColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
    </style>

    <style name="SettingsTheme" parent="Base.Theme.AppCompat">
        <item name="android:background">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/md_white</item>
    </style>

    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/md_white</item>
        <item name="android:textColorHighlight">@color/md_white</item>
        <item name="colorControlNormal">@color/md_white</item>
        <item name="colorControlActivated">@color/md_white</item>
    </style>

    <style name="SplashTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="SplashTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
